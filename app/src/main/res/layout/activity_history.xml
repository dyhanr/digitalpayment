<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

<!--        //Layout Info Profile-->
    <LinearLayout
            android:id="@+id/layout_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/profile_man"
                android:contentDescription="@string/todo2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/hi"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/usernameprofile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginStart="1dp"
                android:textSize="15sp" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="115" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="00dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="Transaction HIstory"
                        android:textStyle="bold"
                        android:layout_marginStart="15dp"
                        android:textSize="17sp" />
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="115" />
                    <ImageButton
                        android:id="@+id/btn_setting"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTintMode="screen"
                        android:contentDescription="@string/todo2"
                        android:src="@drawable/icon_fliterlist" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="15dp"
                    android:background="@color/teal_200"
                    android:padding="10dp" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/cafe2"
                            android:layout_gravity="center"
                            android:padding="7dp"
                            android:contentDescription="@string/todo2" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="6dp"
                            android:layout_marginStart="13dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cafe Tree"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="3dp"
                                android:text="Cappucinno,Salad,Americano"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_margin="2dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/teal_200"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Finished"
                                android:textStyle="bold"
                                android:textColor="@color/teal_200"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginStart="13dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="29 May 2022"
                                android:layout_marginRight="10dp"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="Rp. 76.000,00"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="33dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginTop="10dp"
                                android:text="Order Again"
                                android:textSize="7dp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="15dp"
                    android:background="@color/teal_200"
                    android:padding="10dp" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/cafe2"
                            android:layout_gravity="center"
                            android:padding="7dp"
                            android:contentDescription="@string/todo2" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="6dp"
                            android:layout_marginStart="13dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cafe Tree"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="3dp"
                                android:text="Mocachino Frappe"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_margin="2dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/teal_200"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Decline"
                                android:textColor="@color/red"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginStart="13dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18 Feb 2022"
                                android:layout_marginRight="10dp"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="Rp. 23.500,00"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="33dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginTop="10dp"
                                android:text="Order Again"
                                android:textSize="7dp" />


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="15dp"
                    android:background="@color/teal_200"
                    android:padding="10dp" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/cafe1"
                            android:layout_gravity="center"
                            android:padding="7dp"
                            android:contentDescription="@string/todo2" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="6dp"
                            android:layout_marginStart="13dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cafe Place"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="3dp"
                                android:text="2x Black Coffe"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_margin="2dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/teal_200"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Failed Payment"
                                android:textColor="@color/red"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginStart="13dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20 March 2022"
                                android:layout_marginRight="10dp"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="Rp. 37.000,00"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="33dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginTop="10dp"
                                android:text="Order Again"
                                android:textSize="7dp" />


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="15dp"
                    android:background="@color/teal_200"
                    android:padding="10dp" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/cafe4"
                            android:layout_gravity="center"
                            android:padding="7dp"
                            android:contentDescription="@string/todo2" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="6dp"
                            android:layout_marginStart="13dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cafe Day"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="3dp"
                                android:text="Chicken Burger, Water"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_margin="2dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/teal_200"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Finished"
                                android:textStyle="bold"
                                android:textColor="@color/green"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginStart="13dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22 March 2022"
                                android:layout_marginRight="10dp"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="Rp. 17.000,00"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="33dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginTop="10dp"
                                android:text="Order Again"
                                android:textSize="7dp" />


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Welcome euy"
                        android:visibility="invisible" />
                </LinearLayout>




            </LinearLayout>



        </LinearLayout>
    </ScrollView>





    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/teal_200"
        app:fabCradleMargin="20dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleVerticalOffset="8dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@color/teal_200"
            app:menu="@menu/bottom_nav_menu" />
    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:contentDescription="@string/todo2"
        android:src="@drawable/icon_scanner"
        app:layout_anchor="@id/bottom_app_bar" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
