<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".TestingPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5sp"
        tools:ignore="MissingConstraints">
        <RadioGroup
            android:id="@+id/radioid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="195dp">
        <RadioButton
            android:id="@+id/midtrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="onRadioButtonClicked"
            android:text="First Choice"
            android:layout_marginTop="5sp"
            android:textSize="20sp"
            tools:ignore="OnClick" />
        <RadioButton
            android:id="@+id/wechatpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Second Choice"
            android:layout_marginTop="5sp"
            android:textSize="20sp"
            android:onClick="onRadioButtonClicked"
            tools:ignore="OnClick" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Third Choice"
                android:layout_marginTop="5sp"
                android:textSize="20sp"
                android:onClick="onRadioButtonClicked"
                tools:ignore="OnClick" />
            <Button
                android:id="@+id/alertdialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Button"
                android:layout_marginTop="25sp"
                android:textSize="20sp"
                android:orientation="vertical"
                android:gravity="center"
                android:onClick="openAlertDialog"
                tools:ignore="MissingConstraints,OnClick" />
        </RadioGroup>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
